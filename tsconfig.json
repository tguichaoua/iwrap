{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "declaration": false,

        "esModuleInterop": true,

        "strict": true,

        "forceConsistentCasingInFileNames": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "newLine": "lf",
        "noEmitOnError": true,
        "stripInternal": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
